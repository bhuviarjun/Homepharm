                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:text="Price: ₹120"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="6dp"
                        android:text="Expiry Date: 01.07.2025"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:justificationMode="inter_word"
                        android:text="Warning: Do not exceed the recommended dosage. Keep out of reach of children. Consult a healthcare professional if symptoms persist."
                        android:textColor="@color/red" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:paddingTop="10dp">

                        <Button
                            android:id="@+id/addToCartScofsils"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dp"
                            android:text="ADD TO CART" />

                        <Button
                            android:id="@+id/buyNowScofsils"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:text="BUY NOW" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
